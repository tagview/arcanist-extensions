{
  "exclude": "(^vendor/)",
  "linters": {
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "type": "filename",
      "exclude": [
        "(.*@2x\\.(png|jpg|jpeg|gif)$)"
      ]
    },
    "jshint": {
      "type": "jshint",
      "include": "(\\.js$)",
      "exclude": [],
      "jshint.jshintrc": ".jshintrc"
    },
    "eslint": {
      "type": "eslint",
      "include": "/\\.(js|jsx)$/"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "python": {
      "type": "flake8",
      "include": "(\\.py$)"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "include" : "(\\.(txt|md|html|haml?)$)",
      "text.max-line-length": 100
    },
    "ruby": {
      "type": "rubocop",
      "include": "/\\.(rb|rake)$/",
      "exclude": "(^db/schema\\.rb)",
      "rubocop.config": ".rubocop.yml"
    },
    "scss-lint": {
      "type": "scss-lint",
      "include": "/\\.(scss)$/",
      "scss-lint.config": ".scss-lint.yml"
    }
  }
}
