{
  "rulesDirectory": "node_modules/tslint-eslint-rules/dist/rules",
  "rules": {
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "no-conditional-assignment": true,
    "no-console": [true, "log", "error"],
    "no-constant-condition": true,
    "no-debugger": true,
    "no-duplicate-case": true,
    "no-empty": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-invalid-regexp": true,
    "no-unexpected-multiline": true,
    "use-isnan": true,
    "valid-typeof": true,
    "curly": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "no-arg": true,
    "no-switch-case-fall-through": true,
    "no-multi-spaces": [true, {}],
    "no-shadowed-variable": true,
    "no-duplicate-variable": true,
    "no-unused-expression": true,
    "array-bracket-spacing": [true, "never", {}],
    "brace-style": [true, "1tbs", {}],
    "variable-name": [true, "check-format"],
    "ter-indent": [true, 2],
    "ter-max-len": ["error", 120],
    "indent": [true, "spaces"],
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "quotemark": [true, "single", "jsx-single", "avoid-escape"],
    "semicolon": [true, "always"],
    "ter-arrow-body-style": [true, "always"],
    "ter-arrow-spacing": [true, {"before":true,"after":true}],
    "ter-arrow-parens": [1,"as-needed"],
    "no-var-keyword": true,

    "align": [
      true,
      "parameters",
      "statements"
    ],
    "adjacent-overload-signatures": true,
    "no-invalid-this": true,
    "linebreak-style": [true, "LF"],
    "array-type": [true, "array-simple"],
    "class-name": true,
    "new-parens": true,
    "no-unsafe-finally": true,
    "one-line": [
        true,
        "check-catch",
        "check-finally",
        "check-else",
        "check-open-brace",
        "check-whitespace"
    ],
    "typedef-whitespace": [
        true,
        {
            "call-signature": "nospace",
            "index-signature": "nospace",
            "parameter": "nospace",
            "property-declaration": "nospace",
            "variable-declaration": "nospace"
        }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
